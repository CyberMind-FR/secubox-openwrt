{
  "luci-app-secubox-bonus": {
    "description": "Grant access to SecuBox local package store",
    "read": {
      "ubus": {
        "luci.secubox-store": [
          "list_packages",
          "get_package_info",
          "get_feed_status"
        ]
      }
    },
    "write": {
      "ubus": {
        "luci.secubox-store": [
          "install_package",
          "remove_package"
        ]
      }
    }
  }
}
