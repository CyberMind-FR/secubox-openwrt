{
	"luci-app-wireguard-dashboard": {
		"description": "Grant access to LuCI WireGuard Dashboard",
		"read": {
			"ubus": {
				"luci.wireguard-dashboard": [
					"status",
					"interfaces",
					"peers",
					"config",
					"traffic",
					"peer_descriptions",
					"bandwidth_rates",
					"bandwidth_history",
					"endpoint_info"
				],
				"system": [ "info", "board" ],
				"file": [ "read", "stat", "exec" ]
			},
			"uci": [ "network", "wireguard-dashboard" ],
			"file": {
				"/etc/config/network": [ "read" ],
				"/usr/bin/wg": [ "exec" ]
			}
		},
		"write": {
			"ubus": {
				"luci.wireguard-dashboard": [
					"generate_keys",
					"add_peer",
					"remove_peer",
					"generate_config",
					"generate_qr",
					"interface_control",
					"ping_peer"
				]
			},
			"uci": [ "wireguard-dashboard", "network" ]
		}
	}
}
