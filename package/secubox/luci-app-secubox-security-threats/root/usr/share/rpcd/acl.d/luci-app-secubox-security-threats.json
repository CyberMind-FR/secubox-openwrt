				"luci.secubox-security-threats": [
					"status",
					"get_active_threats",
					"get_threat_history",
					"get_stats_by_type",
					"get_stats_by_host",
					"get_blocked_ips"
				],
				"luci.crowdsec-dashboard": [
					"decisions",
