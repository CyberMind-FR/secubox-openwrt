<%
// Configuration du branding
var logoSymbol = (theme.branding && theme.branding.logo_symbol) || 'â—†';
var logoText = (theme.branding && theme.branding.logo_text) || 'CyberMind_';
var logoImage = (theme.branding && theme.branding.logo_image) || '';

// Configuration du thÃ¨me
var defaultMode = (theme.theme && theme.theme.default_mode) || 'dark';
var allowToggle = theme.theme ? (theme.theme.allow_toggle !== false) : true;
var accentColor = (theme.theme && theme.theme.accent_color) || '#f97316';

// Helper pour vÃ©rifier si un item de menu a des sous-menus
function hasSubmenu(item) {
    return item && typeof item === 'object' && !Array.isArray(item);
}

// Helper pour obtenir le chemin principal d'un menu avec sous-menus
function getMenuPath(item) {
    if (typeof item === 'string') return item;
    if (item && item._path) return item._path;
    return '#';
}
%>

<nav id="mainNav">
    <!-- Logo -->
    <a href="<%= config.root %>" class="nav-logo">
        <% if (logoImage) { %>
        <img src="<%= logoImage %>" alt="<%= logoText %>" class="logo-img">
        <% } else { %>
        <span class="logo-symbol"><%= logoSymbol %></span>
        <span class="logo-text"><%= logoText %></span>
        <% } %>
    </a>
    
    <!-- Actions (theme toggle + hamburger) -->
    <div class="nav-actions">
        <% if (allowToggle) { %>
        <button id="themeToggle" type="button" aria-label="Changer le thÃ¨me" title="Mode clair/sombre">
            <span class="theme-icon sun">â˜€ï¸</span>
            <span class="theme-icon moon">ğŸŒ™</span>
        </button>
        <% } %>
        
        <button id="menuToggle" type="button" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
    
    <!-- Menu -->
    <ul id="menuList">
        <% if (theme.menu) { %>
            <% for (let name in theme.menu) { %>
                <% var menuItem = theme.menu[name]; %>
                
                <% if (hasSubmenu(menuItem)) { %>
                    <%# Menu avec sous-menus (dropdown) %>
                    <li class="has-submenu">
                        <a href="<%= url_for(getMenuPath(menuItem)) %>" class="menu-parent">
                            <%= name %>
                            <span class="dropdown-arrow">â–¾</span>
                        </a>
                        <ul class="submenu">
                            <% for (let subName in menuItem) { %>
                                <% if (subName !== '_path') { %>
                                <li>
                                    <a href="<%= url_for(menuItem[subName]) %>"><%= subName %></a>
                                </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </li>
                <% } else { %>
                    <%# Menu simple %>
                    <li>
                        <a href="<%= url_for(menuItem) %>"><%= name %></a>
                    </li>
                <% } %>
            <% } %>
        <% } %>
        
        <% if (allowToggle) { %>
        <li class="mobile-theme-toggle">
            <button id="themeToggleMobile" type="button">
                <span class="theme-icon sun">â˜€ï¸</span>
                <span class="theme-icon moon">ğŸŒ™</span>
                <span class="theme-label">Mode</span>
            </button>
        </li>
        <% } %>
    </ul>
</nav>

