<%
// M√©tadonn√©es portfolio
var itemIcon = page.icon || 'üíº';
var itemType = page.type || 'project';  // client | project | opensource

// Couleurs selon type
var typeColors = {
    'client': '#10b981',
    'project': '#3b82f6',
    'opensource': '#f59e0b'
};
var typeColor = typeColors[itemType] || '#f97316';

// Type labels
var typeLabels = {
    'client': { icon: 'üè¢', text: 'Client' },
    'project': { icon: 'üöÄ', text: 'Projet' },
    'opensource': { icon: 'üîì', text: 'Open Source' }
};
var typeLabel = typeLabels[itemType] || typeLabels['project'];

// Status
var statusLabels = {
    'live': { icon: 'üü¢', text: 'En ligne', color: '#10b981' },
    'archived': { icon: 'üì¶', text: 'Archiv√©', color: '#6b7280' },
    'demo': { icon: 'üß™', text: 'D√©mo', color: '#f59e0b' }
};
var itemStatus = page.status || 'live';
var statusLabel = statusLabels[itemStatus] || statusLabels['live'];

// Donn√©es client/projet
var client = page.client || {};
var project = page.project || {};
var screenshots = page.screenshots || [];
var beforeAfter = page.before_after || null;
var testimonial = page.testimonial || null;
%>

<article class="portfolio-single" style="--portfolio-color: <%= typeColor %>;">
    
    <!-- Header -->
    <header class="portfolio-header">
        <div class="portfolio-window-bar">
            <div class="window-dots">
                <span class="dot close"></span>
                <span class="dot minimize"></span>
                <span class="dot maximize"></span>
            </div>
            <div class="window-title">
                <%= typeLabel.icon %> <%= typeLabel.text %> ‚Äî <%= page.title %>
            </div>
            <div class="window-status" style="background: <%= statusLabel.color %>20; color: <%= statusLabel.color %>;">
                <%= statusLabel.icon %> <%= statusLabel.text %>
            </div>
        </div>
        
        <div class="portfolio-hero">
            <!-- Thumbnail principal -->
            <div class="portfolio-visual">
                <% if (page.thumbnail) { %>
                <img src="<%= page.thumbnail %>" alt="<%= page.title %>" class="main-thumbnail">
                <% } else { %>
                <div class="thumbnail-placeholder">
                    <span><%= itemIcon %></span>
                </div>
                <% } %>
                
                <!-- Overlay avec liens -->
                <div class="visual-overlay">
                    <% if (page.live_url) { %>
                    <a href="<%= page.live_url %>" target="_blank" class="btn btn-primary">
                        üåê Voir le site ‚Üó
                    </a>
                    <% } %>
                    <% if (page.demo_url) { %>
                    <a href="<%= page.demo_url %>" target="_blank" class="btn btn-secondary">
                        üß™ Version d√©mo
                    </a>
                    <% } %>
                    <% if (page.github_url) { %>
                    <a href="<%= page.github_url %>" target="_blank" class="btn btn-secondary">
                        üíª GitHub
                    </a>
                    <% } %>
                </div>
            </div>
            
            <!-- Infos -->
            <div class="portfolio-info">
                <div class="type-badge" style="background: <%= typeColor %>;">
                    <%= typeLabel.icon %> <%= typeLabel.text %>
                </div>
                
                <h1><%= page.title %></h1>
                <p class="portfolio-description"><%= page.description || '' %></p>
                
                <!-- Info client -->
                <% if (client.name) { %>
                <div class="client-card">
                    <% if (client.logo) { %>
                    <img src="<%= client.logo %>" alt="<%= client.name %>" class="client-logo">
                    <% } %>
                    <div class="client-info">
                        <strong><%= client.name %></strong>
                        <% if (client.sector) { %><span><%= client.sector %></span><% } %>
                        <% if (client.location) { %><span>üìç <%= client.location %></span><% } %>
                    </div>
                </div>
                <% } %>
                
                <!-- D√©tails projet -->
                <% if (project.type || project.technologies) { %>
                <div class="project-details">
                    <% if (project.type) { %>
                    <div class="detail-item">
                        <span class="detail-label">Type</span>
                        <span class="detail-value"><%= project.type %></span>
                    </div>
                    <% } %>
                    <% if (project.year) { %>
                    <div class="detail-item">
                        <span class="detail-label">Ann√©e</span>
                        <span class="detail-value"><%= project.year %></span>
                    </div>
                    <% } %>
                    <% if (project.duration) { %>
                    <div class="detail-item">
                        <span class="detail-label">Dur√©e</span>
                        <span class="detail-value"><%= project.duration %></span>
                    </div>
                    <% } %>
                </div>
                <% } %>
                
                <!-- Technologies -->
                <% if (project.technologies && project.technologies.length) { %>
                <div class="tech-stack">
                    <span class="tech-label">Technologies :</span>
                    <div class="tech-badges">
                        <% project.technologies.forEach(function(tech) { %>
                        <span class="tech-badge"><%= tech %></span>
                        <% }); %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </header>
    
    <!-- Screenshots Gallery -->
    <% if (screenshots.length > 0) { %>
    <section class="portfolio-gallery">
        <h2>üì∏ Captures d'√©cran</h2>
        <div class="screenshots-grid">
            <% screenshots.forEach(function(shot, index) { %>
            <div class="screenshot-item" onclick="openLightbox(<%= index %>)">
                <img src="<%= shot.url %>" alt="<%= shot.caption || page.title %>" loading="lazy">
                <% if (shot.caption) { %>
                <div class="screenshot-caption"><%= shot.caption %></div>
                <% } %>
            </div>
            <% }); %>
        </div>
    </section>
    <% } %>
    
    <!-- Before/After -->
    <% if (beforeAfter && beforeAfter.before && beforeAfter.after) { %>
    <section class="portfolio-before-after">
        <h2>üîÑ Avant / Apr√®s</h2>
        <div class="ba-container">
            <div class="ba-item before">
                <div class="ba-label">Avant</div>
                <img src="<%= beforeAfter.before %>" alt="Avant">
            </div>
            <div class="ba-arrow">‚Üí</div>
            <div class="ba-item after">
                <div class="ba-label">Apr√®s</div>
                <img src="<%= beforeAfter.after %>" alt="Apr√®s">
            </div>
        </div>
    </section>
    <% } %>
    
    <!-- Contenu -->
    <section class="portfolio-content">
        <div class="content-wrapper">
            <%- page.content %>
        </div>
    </section>
    
    <!-- T√©moignage -->
    <% if (testimonial && testimonial.text) { %>
    <section class="portfolio-testimonial">
        <blockquote>
            <p>"<%= testimonial.text %>"</p>
            <% if (testimonial.author) { %>
            <cite>‚Äî <%= testimonial.author %></cite>
            <% } %>
        </blockquote>
    </section>
    <% } %>
    
    <!-- Liens associ√©s -->
    <section class="portfolio-links">
        <h2>üîó Liens</h2>
        <div class="links-grid">
            <% if (page.live_url) { %>
            <a href="<%= page.live_url %>" target="_blank" class="link-card live">
                <span class="link-icon">üåê</span>
                <span class="link-text">Site en ligne</span>
                <span class="link-url"><%= page.live_url.replace('https://', '') %></span>
            </a>
            <% } %>
            <% if (page.demo_url) { %>
            <a href="<%= page.demo_url %>" target="_blank" class="link-card demo">
                <span class="link-icon">üß™</span>
                <span class="link-text">Version d√©mo</span>
                <span class="link-url"><%= page.demo_url.replace('https://', '') %></span>
            </a>
            <% } %>
            <% if (page.github_url) { %>
            <a href="<%= page.github_url %>" target="_blank" class="link-card github">
                <span class="link-icon">üíª</span>
                <span class="link-text">Code source</span>
                <span class="link-url">GitHub</span>
            </a>
            <% } %>
            <% if (page.related_article) { %>
            <a href="<%= page.related_article %>" class="link-card article">
                <span class="link-icon">üìù</span>
                <span class="link-text">Article associ√©</span>
                <span class="link-url">Blog</span>
            </a>
            <% } %>
        </div>
    </section>
    
    <!-- Navigation -->
    <nav class="portfolio-nav">
        <a href="/portfolio/" class="btn btn-secondary">‚Üê Tout le portfolio</a>
        <a href="/showcase/" class="btn btn-secondary">üè™ Showcase</a>
        <a href="/" class="btn btn-secondary">üè† Accueil</a>
    </nav>
    
</article>

<!-- Lightbox -->
<% if (screenshots.length > 0) { %>
<div id="lightbox" class="lightbox" onclick="closeLightbox()">
    <button class="lightbox-close" onclick="closeLightbox()">‚úï</button>
    <button class="lightbox-prev" onclick="event.stopPropagation(); prevImage()">‚ùÆ</button>
    <img id="lightbox-img" src="" alt="">
    <div id="lightbox-caption" class="lightbox-caption"></div>
    <button class="lightbox-next" onclick="event.stopPropagation(); nextImage()">‚ùØ</button>
</div>

<script>
var screenshots = <%- JSON.stringify(screenshots) %>;
var currentIndex = 0;

function openLightbox(index) {
    currentIndex = index;
    updateLightbox();
    document.getElementById('lightbox').classList.add('active');
    document.body.style.overflow = 'hidden';
}

function closeLightbox() {
    document.getElementById('lightbox').classList.remove('active');
    document.body.style.overflow = '';
}

function updateLightbox() {
    var shot = screenshots[currentIndex];
    document.getElementById('lightbox-img').src = shot.url;
    document.getElementById('lightbox-caption').textContent = shot.caption || '';
}

function nextImage() {
    currentIndex = (currentIndex + 1) % screenshots.length;
    updateLightbox();
}

function prevImage() {
    currentIndex = (currentIndex - 1 + screenshots.length) % screenshots.length;
    updateLightbox();
}

document.addEventListener('keydown', function(e) {
    if (!document.getElementById('lightbox').classList.contains('active')) return;
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowRight') nextImage();
    if (e.key === 'ArrowLeft') prevImage();
});
</script>
<% } %>

