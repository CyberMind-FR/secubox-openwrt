<script>
(function() {
    // R√©cup√©rer les services
    var servicesDataEl = document.getElementById('servicesData');
    var allServices = [];
    try {
        allServices = JSON.parse(servicesDataEl.textContent);
    } catch(e) {
        console.warn('No services data');
    }
    
    var currentFilter = 'all';
    
    // Fisher-Yates shuffle
    function shuffle(array) {
        var arr = array.slice();
        for (var i = arr.length - 1; i > 0; i--) {
            var j = Math.floor(Math.random() * (i + 1));
            var temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
        }
        return arr;
    }
    
    // Filtrer les services par tags
    function filterServices(filter) {
        if (filter === 'all') return allServices;
        return allServices.filter(function(s) {
            return s.tags && s.tags.indexOf(filter) >= 0;
        });
    }
    
    // Afficher les services dans le hero
    function displayHeroServices(services) {
        var container = document.getElementById('heroServices');
        if (!container) return;
        
        var toShow = shuffle(services).slice(0, 2);
        container.innerHTML = toShow.map(function(s) {
            return '<a href="' + s.path + '" class="hero-service-card">' +
                   '<span class="hsc-icon">' + s.icon + '</span>' +
                   '<span class="hsc-title">' + s.title + '</span>' +
                   '</a>';
        }).join('');
    }
    
    // Mettre √† jour l'affichage
    function updateDisplay(filter) {
        currentFilter = filter;
        var filtered = filterServices(filter);
        displayHeroServices(filtered.length > 0 ? filtered : allServices);
        
        // Update filter info
        var filterInfo = document.getElementById('filterInfo');
        if (filterInfo) {
            if (filter !== 'all' && filtered.length > 0) {
                filterInfo.textContent = 'üîç Filtr√©: ' + filter + ' (' + filtered.length + ' services)';
                filterInfo.classList.add('visible');
            } else {
                filterInfo.classList.remove('visible');
            }
        }
        
        // Update active cell
        var cells = document.querySelectorAll('.tech-cell');
        cells.forEach(function(cell) {
            cell.classList.toggle('active', cell.dataset.filter === filter);
        });
    }
    
    // Init tech grid interactions
    function initTechGrid() {
        var cells = document.querySelectorAll('.tech-cell');
        cells.forEach(function(cell) {
            cell.addEventListener('click', function() {
                updateDisplay(this.dataset.filter);
            });
            cell.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    updateDisplay(this.dataset.filter);
                }
            });
        });
    }
    
    // Inject hero service card styles
    var style = document.createElement('style');
    style.textContent = `
        .hero-service-card {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.5rem;
            background: var(--bg-secondary);
            border: 1px solid var(--border-subtle);
            border-radius: var(--radius-lg);
            text-decoration: none;
            color: inherit;
            transition: all var(--transition-normal);
        }
        .hero-service-card:hover {
            border-color: var(--accent-primary);
            transform: translateY(-2px);
        }
        .hsc-icon { font-size: 1.5rem; }
        .hsc-title { font-weight: 500; }
    `;
    document.head.appendChild(style);
    
    // Init
    function init() {
        initTechGrid();
        updateDisplay('all');
    }
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
})();
</script>
