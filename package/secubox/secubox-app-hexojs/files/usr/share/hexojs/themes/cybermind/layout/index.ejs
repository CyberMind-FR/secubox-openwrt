<%
// 
// INDEX.EJS - Page d'accueil 100% dynamique
// 

// 
// CONFIGURATION
// 

// Sections √† afficher
var sections = theme.sections || {};
var showHero = sections.hero !== false;
var showServices = sections.services !== false;
var showApps = sections.apps !== false;
var showPortfolio = sections.portfolio !== false;
var showArticles = sections.articles !== false;
var showCategories = sections.categories !== false;
var showYoutube = sections.youtube !== false && theme.youtube && theme.youtube.playlist_id;
var showAbout = sections.about !== false;

// Limites d'affichage
var limits = theme.limits || theme.index || {};
var postsLimit = limits.posts || limits.posts_limit || 6;
var servicesLimit = limits.services || limits.services_limit || 3;
var appsLimit = limits.apps || limits.apps_limit || 2;
var portfolioLimit = limits.portfolio || 4;
var categoriesLimit = limits.categories || limits.categories_limit || 6;

// 
// COLLECTE DES CONTENUS DYNAMIQUES
// 

// Services depuis source/services/*.md
var allServices = [];
site.pages.forEach(function(p) {
    var src = p.source || '';
    var pth = p.path || '';
    if ((src.indexOf('services/') === 0 || pth.indexOf('services/') === 0) &&
        src !== 'services/index.md' && pth !== 'services/' && p.layout !== 'services') {
        if (!allServices.find(function(s) { return s.path === p.path; })) {
            allServices.push({
                title: p.title || 'Service',
                path: p.path,
                icon: p.icon || 'üîß',
                description: p.description || '',
                order: p.order || 999,
                tags: p.tags ? (Array.isArray(p.tags) ? p.tags : []) : []
            });
        }
    }
});
allServices.sort(function(a, b) { return a.order - b.order; });

// Apps depuis source/apps/*.md OU theme.apps
var allApps = [];
site.pages.forEach(function(p) {
    var src = p.source || '';
    if (p.layout === 'app' || (src.indexOf('apps/') === 0 && src !== 'apps/index.md')) {
        if (!allApps.find(function(a) { return a.path === p.path; })) {
            allApps.push({
                title: p.title,
                path: p.path,
                icon: p.icon || 'üöÄ',
                description: p.description || '',
                embed_url: p.embed_url || '',
                category: p.category || 'tools',
                featured: p.featured || false,
                order: p.order || 999,
                // Donn√©es pour vignettes
                cover: p.cover || '',
                thumbnail: p.thumbnail || '',
                images: p.images || [],
                tags: p.tags || [],
                _page: p  // R√©f√©rence √† la page pour render_smart_thumbnail
            });
        }
    }
});
// Ajouter aussi depuis theme.apps si configur√©
if (theme.apps && theme.apps.length) {
    theme.apps.forEach(function(app) {
        if (!allApps.find(function(a) { return a.title === app.name; })) {
            allApps.push({
                title: app.name,
                path: app.url,
                icon: app.icon || 'üöÄ',
                description: app.description || '',
                embed_url: app.url,
                category: app.category || 'tools',
                featured: app.featured || false,
                order: app.order || 999,
                isExternal: true,
                cover: app.cover || '',
                thumbnail: app.thumbnail || ''
            });
        }
    });
}
allApps.sort(function(a, b) {
    if (a.featured && !b.featured) return -1;
    if (!a.featured && b.featured) return 1;
    return a.order - b.order;
});

// Portfolio depuis source/portfolio/*.md
var allPortfolio = [];
site.pages.forEach(function(p) {
    var src = p.source || '';
    if (p.layout === 'portfolio' || (src.indexOf('portfolio/') === 0 && src !== 'portfolio/index.md')) {
        if (!allPortfolio.find(function(a) { return a.path === p.path; })) {
            allPortfolio.push({
                title: p.title,
                path: p.path,
                icon: p.icon || 'üíº',
                description: p.description || '',
                thumbnail: p.thumbnail || '',
                cover: p.cover || '',
                images: p.images || [],
                type: p.type || 'project',
                category: p.category || p.type || 'project',
                client: p.client || {},
                featured: p.featured || false,
                order: p.order || 999,
                tags: p.tags || [],
                _page: p  // R√©f√©rence pour render_smart_thumbnail
            });
        }
    }
});
allPortfolio.sort(function(a, b) {
    if (a.featured && !b.featured) return -1;
    if (!a.featured && b.featured) return 1;
    return a.order - b.order;
});

// Grille tech configurable
var techGrid = theme.tech_grid || [
    { icon: 'üîê', label: 'Security', filter: 'security' },
    { icon: 'üêß', label: 'Linux', filter: 'linux' },
    { icon: 'üíª', label: 'Dev', filter: 'dev' },
    { icon: 'üì°', label: 'IoT', filter: 'iot' },
    { icon: '‚öôÔ∏è', label: 'Embedded', filter: 'embedded' },
    { icon: 'üî¨', label: 'Forensic', filter: 'forensic' },
    { icon: 'üåê', label: 'Web', filter: 'web' },
    { icon: 'üéì', label: 'Formation', filter: 'formation' },
    { icon: 'üé≤', label: 'Random', filter: 'all' }
];

// Hero configuration
var hero = theme.hero || {};
var heroTitle = hero.title || 'Bienvenue';
var heroSubtitle = hero.subtitle || '';
var heroBadge = hero.badge || '';
var heroStats = hero.stats || [];
var heroCta = hero.cta || [
    { text: 'D√©couvrir', url: '#articles', style: 'primary' },
    { text: 'Services', url: '#services', style: 'secondary' }
];

// About configuration
var about = theme.about || {};
%>

<!-- 
     HERO SECTION
      -->
<% if (showHero) { %>
<section class="hero">
    <div class="hero-content">
        <% if (heroBadge) { %>
        <div class="hero-badge"><%= heroBadge %></div>
        <% } %>
        
        <h1 class="hero-title"><%- heroTitle %></h1>
        
        <% if (heroSubtitle) { %>
        <p class="hero-subtitle"><%= heroSubtitle %></p>
        <% } %>
        
        <!-- Services highlight (rempli par JS) -->
        <div class="services-hero" id="heroServices"></div>
        
        <p id="filterInfo" class="filter-info"></p>
        
        <% if (heroStats.length > 0) { %>
        <div class="hero-stats">
            <% heroStats.forEach(function(stat) { %>
            <div class="stat">
                <span class="stat-value"><%= stat.value %></span>
                <span class="stat-label"><%= stat.label %></span>
            </div>
            <% }); %>
        </div>
        <% } %>
        
        <div class="hero-cta">
            <% heroCta.forEach(function(btn) { %>
            <a href="<%= btn.url %>" class="btn btn-<%= btn.style || 'primary' %>"><%= btn.text %></a>
            <% }); %>
        </div>
    </div>

    <div class="hero-visual">
        <div class="tech-grid-visual" id="techGrid">
            <% techGrid.forEach(function(tech) { %>
            <div class="tech-cell" data-filter="<%= tech.filter %>" tabindex="0">
                <span class="tech-cell-icon"><%= tech.icon %></span>
                <span class="tech-cell-label"><%= tech.label %></span>
            </div>
            <% }); %>
        </div>
    </div>
</section>
<% } %>

<!-- 
     SERVICES SECTION
      -->
<% if (showServices && allServices.length > 0) { %>
<section id="services" class="section-alt">
    <div class="section-header">
        <div class="section-tag">Expertise</div>
        <h2 class="section-title">Services</h2>
    </div>
    
    <div class="services-grid" id="servicesGrid">
        <% 
        var servicesToShow = servicesLimit > 0 ? allServices.slice(0, servicesLimit) : allServices;
        servicesToShow.forEach(function(service) { 
        %>
        <a href="<%= url_for(service.path) %>" class="service-card" data-tags="<%= (service.tags || []).join(',') %>">
            <div class="service-icon"><%= service.icon %></div>
            <h3><%= service.title %></h3>
            <p><%= service.description %></p>
            <span class="service-link">En savoir plus ‚Üí</span>
        </a>
        <% }); %>
    </div>
    
    <% if (servicesLimit > 0 && allServices.length > servicesLimit) { %>
    <div class="section-footer">
        <a href="/services/" class="btn btn-secondary">Tous les services (<%= allServices.length %>) ‚Üí</a>
    </div>
    <% } %>
</section>
<% } %>

<!-- 
     APPS SECTION
      -->
<% if (showApps && allApps.length > 0) { %>
<section id="applications" class="section">
    <div class="section-header">
        <div class="section-tag">Outils</div>
        <h2 class="section-title">Applications</h2>
    </div>
    
    <div class="apps-grid">
        <% 
        var appsToShow = appsLimit > 0 ? allApps.slice(0, appsLimit) : allApps;
        
        // Couleurs par cat√©gorie
        var appCatColors = {
            'meditation': '#06b6d4', 'wellness': '#10b981', 'creative': '#ec4899',
            'philosophy': '#a855f7', 'security': '#ef4444', 'cybersecurity': '#00ff88',
            'dev': '#3b82f6', 'tools': '#f97316', 'default': '#6366f1'
        };
        
        appsToShow.forEach(function(app) { 
            var appColor = appCatColors[app.category] || appCatColors.default;
            var hasImage = app.cover || app.thumbnail || (app.images && app.images.length > 0);
        %>
        <div class="app-card" style="--app-color: <%= appColor %>">
            <a href="<%= app.isExternal ? app.path : url_for(app.path) %>" class="app-preview-link" <%= app.isExternal ? 'target="_blank"' : '' %>>
                <div class="app-preview">
                    <% if (hasImage) { %>
                        <% var imgSrc = app.cover || app.thumbnail || app.images[0]; %>
                        <img src="<%= imgSrc %>" alt="<%= app.title %>" loading="lazy" class="app-thumb-img">
                    <% } else if (app._page && typeof render_smart_thumbnail === 'function') { %>
                        <%- render_smart_thumbnail(app._page, { class: 'app-thumb-dynamic' }) %>
                    <% } else { %>
                        <!-- Vignette CSS g√©n√©r√©e -->
                        <div class="app-thumb-generated" style="
                            background: linear-gradient(135deg, <%= appColor %>15, <%= appColor %>30);
                        ">
                            <span class="app-thumb-icon"><%= app.icon %></span>
                            <span class="app-thumb-title"><%= app.title %></span>
                            <span class="app-thumb-category" style="background: <%= appColor %>"><%= app.category %></span>
                        </div>
                    <% } %>
                    <div class="app-overlay">
                        <span class="play-icon">‚ñ∂</span>
                    </div>
                </div>
            </a>
            <div class="app-info">
                <h3><%= app.icon %> <%= app.title %></h3>
                <p><%= app.description %></p>
                <div class="app-actions">
                    <a href="<%= app.isExternal ? app.path : url_for(app.path) %>" <%= app.isExternal ? 'target="_blank"' : '' %> class="btn btn-sm btn-primary">
                        <%= app.isExternal ? 'Ouvrir ‚Üó' : 'Voir ‚Üí' %>
                    </a>
                    <% if (app.embed_url && !app.isExternal) { %>
                    <a href="<%= app.embed_url %>" target="_blank" class="btn btn-sm btn-secondary">Lancer ‚Üó</a>
                    <% } %>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    
    <% if (appsLimit > 0 && allApps.length > appsLimit) { %>
    <div class="section-footer">
        <a href="/apps/" class="btn btn-secondary">Toutes les applications (<%= allApps.length %>) ‚Üí</a>
    </div>
    <% } %>
</section>
<% } %>

<!-- 
     PORTFOLIO SECTION
      -->
<% if (showPortfolio && allPortfolio.length > 0) { %>
<section id="portfolio" class="section-alt">
    <div class="section-header">
        <div class="section-tag">R√©alisations</div>
        <h2 class="section-title">Portfolio</h2>
    </div>
    
    <div class="portfolio-grid">
        <% 
        var portfolioToShow = portfolioLimit > 0 ? allPortfolio.slice(0, portfolioLimit) : allPortfolio;
        
        // Couleurs et labels par type
        var typeColors = { client: '#10b981', project: '#3b82f6', opensource: '#f59e0b', security: '#ef4444' };
        var typeLabels = { client: 'üè¢ Client', project: 'üöÄ Projet', opensource: 'üîì OSS', security: 'üõ°Ô∏è S√©curit√©' };
        
        portfolioToShow.forEach(function(item) { 
            var itemColor = typeColors[item.type] || '#f97316';
            var hasImage = item.cover || item.thumbnail || (item.images && item.images.length > 0);
        %>
        <a href="<%= url_for(item.path) %>" class="portfolio-card" style="--item-color: <%= itemColor %>">
            <div class="portfolio-visual">
                <% if (hasImage) { %>
                    <% var imgSrc = item.cover || item.thumbnail || item.images[0]; %>
                    <img src="<%= imgSrc %>" alt="<%= item.title %>" loading="lazy" class="portfolio-thumb-img">
                <% } else if (item._page && typeof render_smart_thumbnail === 'function') { %>
                    <%- render_smart_thumbnail(item._page, { class: 'portfolio-thumb-dynamic' }) %>
                <% } else { %>
                    <!-- Vignette CSS g√©n√©r√©e pour portfolio -->
                    <div class="portfolio-thumb-generated" style="
                        background: linear-gradient(135deg, <%= itemColor %>15, <%= itemColor %>30);
                    ">
                        <span class="portfolio-thumb-icon"><%= item.icon %></span>
                        <span class="portfolio-thumb-title"><%= item.title %></span>
                        <% if (item.client && item.client.name) { %>
                        <span class="portfolio-thumb-client">üè¢ <%= item.client.name %></span>
                        <% } %>
                    </div>
                <% } %>
                <div class="portfolio-type"><%= typeLabels[item.type] || 'üì¶ Projet' %></div>
                <div class="portfolio-overlay">
                    <span class="view-icon">üëÅÔ∏è</span>
                </div>
            </div>
            <div class="portfolio-info">
                <h3><%= item.icon %> <%= item.title %></h3>
                <p><%= item.description %></p>
                <% if (item.client && item.client.name) { %>
                <span class="portfolio-client">üè¢ <%= item.client.name %></span>
                <% } %>
            </div>
        </a>
        <% }); %>
    </div>
    
    <% if (portfolioLimit > 0 && allPortfolio.length > portfolioLimit) { %>
    <div class="section-footer">
        <a href="/portfolio/" class="btn btn-secondary">Tout le portfolio (<%= allPortfolio.length %>) ‚Üí</a>
    </div>
    <% } %>
</section>
<% } %>

<!-- 
     ARTICLES SECTION
      -->
<% if (showArticles) { %>
<section id="articles" class="section">
    <div class="section-header">
        <div class="section-tag">Blog</div>
        <h2 class="section-title">Articles R√©cents</h2>
    </div>
    
    <div class="articles-grid">
        <% 
        // Utiliser get_blog_posts() si disponible (supporte source/blog/)
        var allBlogPosts = [];
        if (typeof get_blog_posts === 'function') {
            allBlogPosts = get_blog_posts();
        } else if (page.posts && page.posts.length) {
            allBlogPosts = page.posts.toArray ? page.posts.toArray() : [];
        }
        var postsToShow = allBlogPosts.slice(0, postsLimit);
        postsToShow.forEach(function(post) { 
        %>
        <%- partial('partials/article', {post: post}) %>
        <% }); %>
    </div>
    
    <% if (page.total > 1) { %>
    <nav class="pagination">
        <%- paginator({ prev_text: '‚Üê Pr√©c√©dent', next_text: 'Suivant ‚Üí', mid_size: 2 }) %>
    </nav>
    <% } %>
    
    <div class="section-footer">
        <a href="/archives/" class="btn btn-secondary">Tous les articles ‚Üí</a>
    </div>
</section>
<% } %>

<!-- 
     CATEGORIES SECTION
      -->
<% 
// Utiliser get_blog_categories() pour les cat√©gories dynamiques depuis source/blog/
var blogCategories = [];
var hasCategories = false;

if (typeof get_blog_categories === 'function') {
    blogCategories = get_blog_categories();
    hasCategories = blogCategories.length > 0;
} else if (site.categories && site.categories.length > 0) {
    hasCategories = true;
}
%>
<% if (showCategories && hasCategories) { %>
<section id="categories" class="section-alt">
    <div class="section-header">
        <div class="section-tag">Th√©matiques</div>
        <h2 class="section-title">Cat√©gories</h2>
    </div>
    
    <div class="categories-grid">
        <% if (blogCategories.length > 0) { %>
            <% blogCategories.slice(0, categoriesLimit).forEach(function(cat) { %>
            <a href="<%= cat.path %>" class="category-card" style="--cat-color: <%= cat.color %>">
                <span class="category-icon"><%= cat.icon %></span>
                <span class="category-name"><%= cat.name %></span>
                <span class="category-count"><%= cat.count %></span>
            </a>
            <% }); %>
        <% } else { %>
            <% 
            var defaultColors = ['#00d4ff', '#3b82f6', '#9945ff', '#10b981', '#f59e0b', '#ef4444'];
            var defaultIcons = ['üìÅ', 'üìÇ', 'üóÇÔ∏è', 'üìã', 'üìÑ', 'üìù'];
            var allCategories = site.categories.sort('name');
            var categoriesToShow = categoriesLimit > 0 ? allCategories.limit(categoriesLimit) : allCategories;
            var idx = 0;
            categoriesToShow.each(function(cat) {
                var icon = defaultIcons[idx % defaultIcons.length];
                var color = defaultColors[idx % defaultColors.length];
                if (theme.categories && theme.categories[cat.name.toLowerCase()]) {
                    var conf = theme.categories[cat.name.toLowerCase()];
                    icon = conf.icon || icon;
                    color = conf.color || color;
                }
                idx++;
            %>
            <a href="<%= url_for(cat.path) %>" class="category-card" style="--cat-color: <%= color %>">
                <span class="category-icon"><%= icon %></span>
                <span class="category-name"><%= cat.name %></span>
                <span class="category-count"><%= cat.posts.length %></span>
            </a>
            <% }); %>
        <% } %>
    </div>
    
    <div class="section-footer">
        <a href="<%= url_for('/categories/') %>" class="btn btn-secondary">Voir le blog ‚Üí</a>
    </div>
</section>
<% } %>

<!-- 
     YOUTUBE SECTION
      -->
<% if (showYoutube) { %>
<section id="youtube" class="section">
    <div class="section-header">
        <div class="section-tag">Vid√©os</div>
        <h2 class="section-title"><%= theme.youtube.title || 'Cha√Æne YouTube' %></h2>
        <% if (theme.youtube.description) { %>
        <p class="section-subtitle"><%= theme.youtube.description %></p>
        <% } %>
    </div>
    
    <div class="youtube-embed">
        <iframe 
            src="https://www.youtube.com/embed/videoseries?list=<%= theme.youtube.playlist_id %>" 
            frameborder="0" 
            allowfullscreen
            loading="lazy">
        </iframe>
    </div>
</section>
<% } %>

<!-- 
     ABOUT SECTION
      -->
<% if (showAbout && about.name) { %>
<section id="about" class="section-alt">
    <div class="section-header">
        <div class="section-tag">Qui suis-je</div>
        <h2 class="section-title">√Ä propos</h2>
    </div>
    
    <div class="about-content">
        <div class="about-avatar">
            <% if (about.avatar_image) { %>
            <img src="<%= about.avatar_image %>" alt="<%= about.name %>">
            <% } else { %>
            <span class="avatar-emoji"><%= about.avatar || 'üë®‚Äçüíª' %></span>
            <% } %>
        </div>
        
        <div class="about-info">
            <h3><%= about.name %></h3>
            <% if (about.title) { %>
            <p class="about-title"><%= about.title %></p>
            <% } %>
            
            <% if (about.description) { %>
            <div class="about-description"><%- about.description.replace(/\n/g, '<br>') %></div>
            <% } %>
            
            <% if (about.expertise && about.expertise.length) { %>
            <div class="about-expertise">
                <% about.expertise.forEach(function(skill) { %>
                <span class="expertise-tag"><%= skill %></span>
                <% }); %>
            </div>
            <% } %>
            
            <% if (about.stats && about.stats.length) { %>
            <div class="about-stats">
                <% about.stats.forEach(function(stat) { %>
                <div class="about-stat">
                    <span class="stat-value"><%= stat.value %></span>
                    <span class="stat-label"><%= stat.label %></span>
                </div>
                <% }); %>
            </div>
            <% } %>
        </div>
    </div>
</section>
<% } %>

<!-- 
     DATA POUR JAVASCRIPT
      -->
<script type="application/json" id="servicesData">
<%- JSON.stringify(allServices) %>
</script>

<!-- 
     STYLES
      -->
