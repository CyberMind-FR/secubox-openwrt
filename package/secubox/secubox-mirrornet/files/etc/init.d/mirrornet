#!/bin/sh /etc/rc.common

START=96
STOP=10
USE_PROCD=1

PROG=/usr/sbin/mirrorctl

start_service() {
    local enabled
    config_load mirrornet
    config_get enabled main enabled '0'

    [ "$enabled" = "1" ] || return 0

    procd_open_instance
    procd_set_param command "$PROG" daemon
    procd_set_param respawn 3600 5 5
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param pidfile /var/run/mirrornet.pid
    procd_close_instance

    logger -t mirrornet "MirrorNet daemon started"
}

stop_service() {
    logger -t mirrornet "MirrorNet daemon stopped"
}

reload_service() {
    stop
    start
}

service_triggers() {
    procd_add_reload_trigger "mirrornet"
}
