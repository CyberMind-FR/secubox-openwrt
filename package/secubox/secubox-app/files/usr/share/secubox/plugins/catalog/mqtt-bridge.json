{
  "id": "mqtt-bridge",
  "name": "MQTT Bridge",
  "category": "iot",
  "runtime": "native",
  "maturity": "experimental",
  "description": "USB-aware MQTT bridge with adapter presets, local broker controls, and automation rules.",
  "source": {
    "homepage": "https://github.com/gkerma/secubox-openwrt/tree/main/luci-app-mqtt-bridge",
    "github": "https://github.com/gkerma/secubox-openwrt/tree/main/luci-app-mqtt-bridge"
  },
  "packages": [
    "luci-app-mqtt-bridge"
  ],
  "capabilities": [
    "mqtt-broker",
    "usb-bridging",
    "automation-rules"
  ],
  "requirements": {
    "arch": [
      "arm64",
      "armv7",
      "x86_64",
      "mipsel"
    ],
    "min_ram_mb": 128,
    "min_storage_mb": 60
  },
  "hardware": {
    "usb": true,
    "serial": true
  },
  "network": {
    "inbound_ports": [
      1883
    ],
    "protocols": [
      "mqtt",
      "http"
    ],
    "outbound_only": false
  },
  "privileges": {
    "needs_usb": true,
    "needs_serial": true,
    "needs_net_admin": false
  },
  "update": {
    "strategy": "opkg"
  },
  "wizard": {
    "steps": [
      "broker_setup",
      "adapter_discovery",
      "rule_binding"
    ]
  },
  "profiles": {
    "recommended": [
      "home",
      "iot",
      "lab"
    ]
  }
}
