{
  "id": "netifyd-dpi",
  "name": "Netifyd DPI",
  "category": "monitoring",
  "runtime": "native",
  "maturity": "stable",
  "description": "Complete Deep Packet Inspection interface with real-time flow monitoring, application detection, device tracking, and comprehensive network analytics powered by Netifyd engine.",
  "source": {
    "homepage": "https://github.com/CyberMind-FR/secubox-openwrt/tree/master/package/secubox/luci-app-secubox-netifyd",
    "github": "https://github.com/CyberMind-FR/secubox-openwrt/tree/master/package/secubox/luci-app-secubox-netifyd"
  },
  "packages": [
    "luci-app-secubox-netifyd",
    "netifyd",
    "jq"
  ],
  "capabilities": [
    "dpi",
    "device-insights",
    "traffic-analysis",
    "application-detection",
    "protocol-detection",
    "flow-tracking",
    "ssl-inspection",
    "dns-inspection"
  ],
  "requirements": {
    "arch": [
      "arm64",
      "armv7",
      "x86_64",
      "mipsel"
    ],
    "min_ram_mb": 128,
    "min_storage_mb": 30
  },
  "hardware": {
    "usb": false,
    "serial": false
  },
  "network": {
    "inbound_ports": [],
    "protocols": [
      "http"
    ],
    "outbound_only": true
  },
  "privileges": {
    "needs_usb": false,
    "needs_serial": false,
    "needs_net_admin": true
  },
  "update": {
    "strategy": "opkg"
  },
  "profiles": {
    "recommended": [
      "gateway",
      "lab",
      "isp-lite",
      "security"
    ]
  }
}
