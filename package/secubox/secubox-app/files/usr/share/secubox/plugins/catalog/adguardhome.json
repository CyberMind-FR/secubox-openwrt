{
  "id": "adguardhome",
  "name": "AdGuard Home",
  "category": "network",
  "runtime": "docker",
  "maturity": "stable",
  "description": "Network-wide ad and tracker blocker with DNS-over-HTTPS/TLS support, parental controls, and detailed analytics. Pi-hole alternative.",
  "source": {
    "homepage": "https://adguard.com/en/adguard-home/overview.html",
    "github": "https://github.com/CyberMind-FR/secubox-openwrt/tree/main/secubox-app-adguardhome"
  },
  "packages": [
    "secubox-app-adguardhome",
    "luci-app-vhost-manager"
  ],
  "capabilities": [
    "dns-filtering",
    "ad-blocking",
    "docker-runner",
    "vhost-publish"
  ],
  "requirements": {
    "arch": [
      "arm64",
      "x86_64"
    ],
    "min_ram_mb": 128,
    "min_storage_mb": 100
  },
  "hardware": {
    "usb": false,
    "serial": false
  },
  "network": {
    "inbound_ports": [
      3000,
      53
    ],
    "protocols": [
      "http",
      "https",
      "dns"
    ],
    "outbound_only": false
  },
  "privileges": {
    "needs_usb": false,
    "needs_serial": false,
    "needs_net_admin": true
  },
  "update": {
    "strategy": "docker_pull"
  },
  "wizard": {
    "steps": [
      "data_path",
      "dns_port_config",
      "vhost_binding"
    ]
  },
  "profiles": {
    "recommended": [
      "home",
      "office",
      "lab"
    ]
  }
}
