{
  "id": "magicmirror",
  "name": "MagicMirrorÂ²",
  "category": "iot",
  "runtime": "docker",
  "maturity": "stable",
  "description": "Smart mirror platform with modular information display. Transform any display into an interactive dashboard with weather, calendar, news, and custom modules.",
  "source": {
    "homepage": "https://magicmirror.builders/",
    "github": "https://github.com/gkerma/secubox-openwrt/tree/main/secubox-app-magicmirror"
  },
  "packages": [
    "secubox-app-magicmirror",
    "luci-app-magicmirror",
    "luci-app-vhost-manager"
  ],
  "capabilities": [
    "smart-mirror",
    "modular-display",
    "docker-runner",
    "vhost-publish",
    "module-manager"
  ],
  "requirements": {
    "arch": [
      "arm64",
      "x86_64"
    ],
    "min_ram_mb": 512,
    "min_storage_mb": 1024
  },
  "hardware": {
    "usb": false,
    "serial": false,
    "display": true
  },
  "network": {
    "inbound_ports": [
      8080
    ],
    "protocols": [
      "http",
      "websocket"
    ],
    "outbound_only": false
  },
  "privileges": {
    "needs_usb": false,
    "needs_serial": false,
    "needs_net_admin": false
  },
  "update": {
    "strategy": "docker_pull"
  },
  "wizard": {
    "steps": [
      "data_path",
      "timezone_locale",
      "default_modules",
      "vhost_binding"
    ]
  },
  "profiles": {
    "recommended": [
      "home",
      "iot",
      "display"
    ]
  }
}
