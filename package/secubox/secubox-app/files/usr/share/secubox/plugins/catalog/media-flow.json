{
  "id": "media-flow",
  "name": "Media Flow",
  "category": "media",
  "runtime": "native",
  "maturity": "stable",
  "description": "Streaming/VoIP detection dashboard with QoE counters, histories, and alerts.",
  "source": {
    "homepage": "https://github.com/CyberMind-FR/secubox-openwrt/tree/main/luci-app-media-flow",
    "github": "https://github.com/CyberMind-FR/secubox-openwrt/tree/main/luci-app-media-flow"
  },
  "packages": [
    "luci-app-media-flow"
  ],
  "capabilities": [
    "stream-detection",
    "qoemetrics",
    "alerts"
  ],
  "requirements": {
    "arch": [
      "arm64",
      "armv7",
      "x86_64",
      "mipsel"
    ],
    "min_ram_mb": 256,
    "min_storage_mb": 60
  },
  "hardware": {
    "usb": false,
    "serial": false
  },
  "network": {
    "inbound_ports": [],
    "protocols": [
      "http"
    ],
    "outbound_only": true
  },
  "privileges": {
    "needs_usb": false,
    "needs_serial": false,
    "needs_net_admin": true
  },
  "update": {
    "strategy": "opkg"
  },
  "wizard": {
    "steps": [
      "service_filters",
      "alert_rules",
      "integration_checkpoint"
    ]
  },
  "profiles": {
    "recommended": [
      "home",
      "campus",
      "isp-lite"
    ]
  }
}
