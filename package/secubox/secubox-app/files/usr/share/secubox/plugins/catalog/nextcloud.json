{
  "id": "nextcloud",
  "name": "Nextcloud",
  "category": "productivity",
  "runtime": "docker",
  "maturity": "stable",
  "description": "Self-hosted file sync and share platform with calendar, contacts, and collaboration. Dropbox alternative with apps for mobile and desktop.",
  "source": {
    "homepage": "https://nextcloud.com/",
    "github": "https://github.com/gkerma/secubox-openwrt/tree/main/secubox-app-nextcloud"
  },
  "packages": [
    "secubox-app-nextcloud",
    "luci-app-vhost-manager"
  ],
  "capabilities": [
    "file-sync",
    "collaboration",
    "docker-runner",
    "vhost-publish"
  ],
  "requirements": {
    "arch": [
      "arm64",
      "x86_64"
    ],
    "min_ram_mb": 512,
    "min_storage_mb": 2048
  },
  "hardware": {
    "usb": false,
    "serial": false
  },
  "network": {
    "inbound_ports": [
      80
    ],
    "protocols": [
      "http",
      "https"
    ],
    "outbound_only": false
  },
  "privileges": {
    "needs_usb": false,
    "needs_serial": false,
    "needs_net_admin": false
  },
  "update": {
    "strategy": "docker_pull"
  },
  "wizard": {
    "steps": [
      "data_path",
      "admin_credentials",
      "trusted_domains",
      "vhost_binding"
    ]
  },
  "profiles": {
    "recommended": [
      "home",
      "office",
      "lab"
    ]
  }
}
