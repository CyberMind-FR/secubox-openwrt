# SecuBox SMB/CIFS Remote Mount Manager
# Each 'mount' section defines a remote SMB share

config smbfs 'global'
	option enabled '1'
	option mount_base '/mnt/smb'
	option cifs_version '3.0'
	option timeout '10'

