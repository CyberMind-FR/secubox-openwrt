#!/bin/sh /etc/rc.common

START=95
STOP=10
USE_PROCD=1

PROG=/usr/sbin/gotosocialctl

start_service() {
	local enabled
	config_load gotosocial
	config_get enabled main enabled '0'

	[ "$enabled" = "1" ] || return 0

	$PROG start
}

stop_service() {
	$PROG stop
}

reload_service() {
	$PROG reload
}

service_triggers() {
	procd_add_reload_trigger "gotosocial"
}

status() {
	$PROG status
}
