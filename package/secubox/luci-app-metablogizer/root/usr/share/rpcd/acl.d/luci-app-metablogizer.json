{
	"luci-app-metablogizer": {
		"description": "Grant access to MetaBlogizer Static Site Publisher",
		"read": {
			"ubus": {
				"luci.metablogizer": [
					"status",
					"list_sites",
					"get_site",
					"get_publish_info",
					"get_settings",
					"get_hosting_status",
					"check_site_health"
				],
				"file": ["read", "list", "stat"]
			},
			"uci": ["metablogizer"],
			"file": {
				"/srv/metablogizer/sites/*": ["read", "list"]
			}
		},
		"write": {
			"ubus": {
				"luci.metablogizer": [
					"create_site",
					"update_site",
					"delete_site",
					"sync_site",
					"save_settings",
					"upload_file",
					"list_files"
				],
				"luci.haproxy": [
					"create_backend",
					"create_server",
					"create_vhost",
					"delete_backend",
					"delete_vhost"
				],
				"file": ["write", "remove"]
			},
			"uci": ["metablogizer"],
			"file": {
				"/srv/metablogizer/sites/*": ["write"]
			}
		}
	}
}
