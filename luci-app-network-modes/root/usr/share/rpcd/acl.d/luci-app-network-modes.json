{
	"luci-app-network-modes": {
		"description": "Grant access to LuCI Network Modes Dashboard",
		"read": {
			"ubus": {
				"luci.network-modes": [
					"status",
					"get_current_mode",
					"get_available_modes",
					"get_interfaces",
					"validate_config"
				],
				"system": [ "info", "board" ],
				"network.interface": [ "status", "dump" ],
				"iwinfo": [ "info", "scan" ],
				"file": [ "read", "stat" ]
			},
			"uci": [ "network", "wireless", "firewall", "dhcp", "network-modes" ],
			"file": {
				"/etc/config/*": [ "read" ],
				"/sys/class/net/*": [ "read" ]
			}
		},
		"write": {
			"ubus": {
				"luci.network-modes": [
					"set_mode"
				]
			},
			"uci": [ "network", "wireless", "firewall", "dhcp", "network-modes" ]
		}
	}
}
